{
    "name": "Campaign Monitor HTML Import Helper by The Daily Upside",
    "description": "Don't let the Campaign Monitor HTML importer break your nice code. Disable the 'Move to Inline CSS' checkbox with ease.",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "index.html",
        "default_icon": "sunstrisk.png"
    },
    "icons": {
        "16": "sunstrisk.png",
        "48": "sunstrisk.png",
        "128": "sunstrisk.png"
    },
    "content_scripts": [
        {
            "matches": ["https://*.createsend.com/campaigns/*"],
            "js": ["content.js"]
        }
    ],
    "permissions": [],
    "host_permissions": ["https://*.createsend.com/campaigns/*"],
    "homepage_url": "https://github.com/The-Daily-Upside/campaign-monitor-html-import-helper"
}
